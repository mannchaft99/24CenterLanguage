<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChineseClass">

    <TextView
        android:id="@+id/hellotext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/alata"
        android:text="Các khoá học tiếng Trung"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="414dp"
        android:layout_height="2sp"
        android:layout_marginTop="40dp"
        android:background="#DDDDDD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SmallSp">
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="10dp">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:flexDirection="row"
            app:justifyContent="space_evenly">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">
                <ImageButton
                    android:id="@+id/chinese_button_0"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/hsk" />
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="160dp"
                    android:layout_height="46dp"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="140dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:text="Khoá học cơ bản (Mục tiêu HSK3)"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">
                <ImageButton
                    android:id="@+id/chinese_button_1"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/hsk" />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="160dp"
                    android:layout_height="46dp"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="140dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:text="Khoá học phát triển (Mục tiêu HSK4)"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">
                <ImageButton
                    android:id="@+id/chinese_button_2"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/hsk" />
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="160dp"
                    android:layout_height="46dp"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="140dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:text="Khoá học nâng cao (Mục tiêu HSK5)"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">
                <ImageButton
                    android:id="@+id/chinese_button_3"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/hsk" />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="160dp"
                    android:layout_height="46dp"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="140dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:text="Khoá học cơ bản đến phát triển"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">
                <ImageButton
                    android:id="@+id/chinese_button_4"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/hsk" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="160dp"
                    android:layout_height="46dp"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="140dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:text="Khoá học cơ bản đến nâng cao"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </com.google.android.flexbox.FlexboxLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>