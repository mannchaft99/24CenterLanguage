<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    tools:context=".EnglishClass">

    <TextView
        android:id="@+id/hellotext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:text="Các khoá học tiếng Anh"
        android:fontFamily="@font/alata"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="414dp"
        android:layout_height="2sp"
        android:layout_marginTop="40dp"
        android:background="#DDDDDD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SmallSp">
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="10dp">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:flexDirection="row"
            app:justifyContent="space_evenly">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">
                <ImageButton
                    android:id="@+id/toeic_button_0"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/toeic" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:text="TOEIC 450 - 550+"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">
                <ImageButton
                    android:id="@+id/toeic_button_1"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/toeic" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:text="TOEIC 550 - 650+"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">
                <ImageButton
                    android:id="@+id/toeic_button_2"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/toeic" />
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:text="TOEIC 650 - 750+"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">
                <ImageButton
                    android:id="@+id/toeic_button_3"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/toeic" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:text="TOEIC 750+"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">
                <ImageButton
                    android:id="@+id/ielts_button_0"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/ielts" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:text="IELTS 4.5 - 5.5+"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">
                <ImageButton
                    android:id="@+id/ielts_button_1"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/ielts" />
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:text="IELTS 5.5 - 6.5+"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">
                <ImageButton
                    android:id="@+id/ielts_button_2"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/ielts" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:text="IELTS 6.5 - 7.5+"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">
                <ImageButton
                    android:id="@+id/ielts_button_3"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/ielts" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:text="IELTS 7.5+"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </com.google.android.flexbox.FlexboxLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>