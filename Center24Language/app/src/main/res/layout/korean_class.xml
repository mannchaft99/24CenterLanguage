<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KoreanClass">

    <TextView
        android:id="@+id/hellotext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/alata"
        android:text="Các khoá học tiếng Hàn"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="414dp"
        android:layout_height="2sp"
        android:layout_marginTop="40dp"
        android:background="#DDDDDD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SmallSp">
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="10dp">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:flexDirection="row"
            app:justifyContent="space_evenly">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp">
                <ImageButton
                    android:id="@+id/korean_button_0"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/topik" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="140dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:text="Khoá học Sơ cấp 1"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp">
                <ImageButton
                    android:id="@+id/korean_button_1"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/topik" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="140dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:text="Khoá học Sơ cấp 2"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp">
                <ImageButton
                    android:id="@+id/korean_button_2"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/topik" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="140dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:text="Khoá học Trung cấp 1"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp">
                <ImageButton
                    android:id="@+id/korean_button_3"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/topik" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:text="Khoá học Trung cấp 2"
                    android:layout_marginTop="140dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp">
                <ImageButton
                    android:id="@+id/korean_button_4"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/topik" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:text="Khoá học Cao cấp 1"
                    android:layout_marginTop="140dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp">
                <ImageButton
                    android:id="@+id/korean_button_5"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_button_background"
                    app:srcCompat="@drawable/topik" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:text="Khoá học Cao cấp 2"
                    android:layout_marginTop="140dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </com.google.android.flexbox.FlexboxLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>